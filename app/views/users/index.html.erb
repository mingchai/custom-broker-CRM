<%= stylesheet_link_tag 'index' %>
<p id="notice"><%= notice %></p>
<h1>
  Employee Directory
  <% if current_user.admin == true %>
    <%= link_to 'New Employee Profile', new_user_path, class: "btn btn-primary float-right" %>
  <% end %>
</h1>
<div>
  <table>
    <tr id="table-header">
      <td>Name</td>
      <td>Email</td>
    </tr>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, user %></td>
          <td>
            <%= user.email %>
            <td>
              <%= link_to 'Show More Detail', user, class:"btn-sm btn-info" %>
              <% if current_user.admin == true %>
              <%= link_to 'Delete Record', user, method: :delete, data: { confirm: 'This action will permanently delete this entry. Are you sure?' }, class:"btn-sm btn-danger" %>
              <% end %>
            </td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>